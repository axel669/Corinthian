{
    "env": {
        "es6": true,
        "browser": true
    },
    "ecmaFeatures": {
        "modules": true,
        "jsx": true
    },
    "parser": "babel-eslint",
    "rules": {
        "no-cond-assign": [2, "always"],
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty-character-class": 2,
        "no-empty": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-semi": 1,
        "no-func-assign": 2,
        "no-inner-declarations": 2,
        "no-irregular-whitespace": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-typeof": 2,
        "no-unexpected-multiline": 2,

        "curly": 2,
        "dot-notation": 2,
        "eqeqeq": 2,
        "no-alert": 2,
        "no-caller": 2,
        "no-div-regex": 1,
        "no-empty-label": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 1,
        "no-implicit-coercion": 2,
        "no-lone-blocks": 1,
        "no-loop-func": 2,
        "no-multi-spaces": 1,
        "no-multi-str": 2,
        "no-new": 2,
        "no-new-wrappers": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-sequences": 2,
        "no-unused-expressions": 2,
        "no-with": 2,
        "vars-on-top": 2,
        "wrap-iife": 2,
        "yoda": 1,

        "init-declarations": [2, "never"],
        "no-catch-shadow": 1,
        "no-shadow-restricted-names": 2,
        "no-shadow": 1,
        "no-unused-vars": 1,

        "brace-style": 2,
        "camelcase": 2,
        "comma-spacing": 2,
        "comma-style": 1,
        "computed-property-spacing": 1,
        "eol-last": 1,
        "func-style": [2, "expression"],
        "indent": [2, 4, {"SwitchCase": 1}],
        "key-spacing": 2,
        "new-parens": 2,
        "no-array-constructor": 2,
        "no-continue": 1,
        "no-mixed-spaces-and-tabs": 1,
        "no-nested-ternary": 2,
        "one-var": 2,
        "operator-assignment": 1,
        "operator-linebreak": [1, "before"],
        "padded-blocks": [2, "never"],
        "quote-props": [1, "as-needed"],
        "semi": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": 2,
        "space-infix-ops": 2,

        "arrow-spacing": 2,
        "no-var": 2,
        "object-shorthand": 1,
        "prefer-spread": 1,
        "max-params": [2, 3],
        "no-plusplus": 2
    }
}
